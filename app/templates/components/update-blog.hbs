{{#if updateBlogForm}}
  <h4>Update {{blog.title}} by {{blog.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=blog.author}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=blog.date}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=blog.title}}
      </div>

      <div class="form-group">
        <label for="subtitle">Subtitle</label>
        {{input value=subtitle id="subtitle" placeholder=blog.subtitle}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=blog.body}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" placeholder=blog.image}}
      </div>

      <button {{action 'update' blog}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateBlogForm'}}>Update</button>
{{/if}}
